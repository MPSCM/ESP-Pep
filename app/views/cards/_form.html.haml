= form_for @card do |f|
  - if @card.errors.any?
    #error_explanation
      %h2= "#{pluralize(@card.errors.count, "error")} prohibited this card from being saved:"
      %ul
        - @card.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :from_name
    = f.text_field :from_name
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :position
    = f.text_field :position
  .field
    = f.label :club_id
    = f.number_field :club_id
  .field
    = f.label :manager_name
    = f.text_field :manager_name
  .field
    = f.label :value
    = f.number_field :value
  .field
    = f.label :service_standard
    = f.number_field :service_standard
  .field
    = f.label :note
    = f.text_area :note
  .field
    = f.label :from_email
    = f.text_field :from_email
  .actions
    = f.submit 'Save'
